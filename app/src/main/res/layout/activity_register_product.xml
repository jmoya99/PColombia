<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.seller.RegisterProductActivity"
    tools:visibility="visible">

    <TextView
        android:id="@+id/label_username_registerProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="@string/name_registerProduct"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="@+id/nameTextView_registerProduct"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/nameTextView_registerProduct"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/label_username_registerProduct" />

    <TextView
        android:id="@+id/label_brand_registerProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/tradeMark_registerProduct"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="@+id/tradeMarkTextView_registerProduct"
        app:layout_constraintTop_toBottomOf="@+id/nameTextView_registerProduct" />

    <EditText
        android:id="@+id/tradeMarkTextView_registerProduct"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/label_brand_registerProduct" />

    <TextView
        android:id="@+id/label_price_registerProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/price_registerProduct"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="@+id/priceTextView_registerProduct"
        app:layout_constraintTop_toBottomOf="@+id/tradeMarkTextView_registerProduct" />

    <EditText
        android:id="@+id/priceTextView_registerProduct"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/label_price_registerProduct" />

    <TextView
        android:id="@+id/label_type_registerProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/type_registerProduct"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="@+id/typeSpinner_registerProduct"
        app:layout_constraintTop_toBottomOf="@+id/priceTextView_registerProduct" />

    <TextView
        android:id="@+id/label_quantity_registerProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/amount_registerProduct"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="@+id/amountTextView_registerProduct"
        app:layout_constraintTop_toBottomOf="@+id/typeSpinner_registerProduct" />

    <EditText
        android:id="@+id/amountTextView_registerProduct"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/label_quantity_registerProduct" />

    <TextView
        android:id="@+id/label_description_registerProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/description_registerProduct"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="@+id/descriptionTextView_registerProduct"
        app:layout_constraintTop_toBottomOf="@+id/amountTextView_registerProduct" />

    <EditText
        android:id="@+id/descriptionTextView_registerProduct"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/label_description_registerProduct" />

    <Button
        android:id="@+id/cancelButton_registerProduct"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:text="@string/cancelButton"
        app:backgroundTint="@color/gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/registerButton_registerProduct"
        app:layout_constraintTop_toBottomOf="@+id/descriptionTextView_registerProduct"
        app:rippleColor="#FFFFFF" />

    <Button
        android:id="@+id/registerButton_registerProduct"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:onClick="registerProduct"
        android:text="@string/registerButton_registerProduct"
        app:backgroundTint="@color/orange"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/cancelButton_registerProduct"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/descriptionTextView_registerProduct" />

    <Spinner
        android:id="@+id/typeSpinner_registerProduct"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:background="@android:drawable/btn_dropdown"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/label_type_registerProduct" />


</androidx.constraintlayout.widget.ConstraintLayout>